{
"version": 1,
"loggers": {
        "datalayer" : {
            "handlers": ["datalayer","console"],
            "level": "CRITICAL",
            "propagate": false
        },
        "measurements" : {
            "handlers": ["measurements","console"],
            "level": "CRITICAL",
            "propagate": false
        },
        "simulations" : {
            "handlers": ["simulations","console"],
            "level": "CRITICAL",
            "propagate": false
        },
        "bin" : {
            "handlers": ["bin","console"],
            "level": "CRITICAL",
            "propagate": false
        }
},
"handlers": {
    "console" : {
        "class": "logging.StreamHandler",
        "formatter": "brief",
        "stream": "ext://sys.stdout"
    },
    "bin" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/log/bin.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "datalayer" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/log/datalayer.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "measurements" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/log/measurements.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "errors": {
        "class": "logging.FileHandler",
        "formatter": "default",
        "filename": "{herapath}/log/Errors.log"
    },
    "simulations" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/log/simulations.log",
        "maxBytes": 20000,
        "backupCount": 3
    }
},
"formatters" : {
    "brief" : {
        "format": " %(levelname)-8s: %(filename)s/%(funcName)s(%(lineno)d) %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
     },
    "default": {
        "format": "%(asctime)s %(filename)s/%(funcName)s(%(lineno)d) %(levelname)-8s %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
    }
}


}