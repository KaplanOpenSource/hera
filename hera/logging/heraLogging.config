{
"version": 1,
"loggers": {
        "datalayer" : {
            "handlers": ["datalayer","console"],
            "level": "DEBUG",
            "propagate": false
        },
        "measurements" : {
            "handlers": ["measurements","console"],
            "level": "DEBUG",
            "propagate": false
        },
        "simulations" : {
            "handlers": ["simulations","console"],
            "level": "CRITICAL",
            "propagate": false
        },
        "bin" : {
            "handlers": ["bin","console"],
            "level": "DEBUG",
            "propagate": false
        }
},
"handlers": {
    "console" : {
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stdout"
    },
    "bin" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/log/bin.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "datalayer" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/log/datalayer.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "measurements" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/measurements.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "measurements.GIS": {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/measurements-GIS.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "measurements.meteorological": {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/measurements-meteorological.log",
        "maxBytes": 20000,
        "backupCount": 3
    },
    "errors": {
        "class": "logging.FileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/log/Errors.log"
    },
    "simulations" : {
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "default",
        "filename": "{herapath}/logging/log/simulations.log",
        "maxBytes": 20000,
        "backupCount": 3
    }
},
"formatters" : {
    "brief" : {
        "format": "%(message)s"
     },
    "default": {
        "format": "%(asctime)s %(filename)s/%(funcName)s(%(lineno)d) %(levelname)-8s %(name)-15s %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
    }
}


}